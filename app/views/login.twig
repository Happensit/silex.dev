{% extends 'layout.twig' %}

{% block body %}
<div class="pg-single wrp">

	<img src="{{ asset('img/logo-light.png') }}" />

	{% if error is not empty %}
        <div>
            {{ error|trans({}, 'security') }}
        </div>
    {% endif %}

    <form class="form login_form" action="{{ path('login_check') }}" method="POST">
        <label for="_username">Логин</label>
        <input type="text" name="_username" data-format=".+" value="">
        <br/>
        <label for="_password">Пароль</label>
        <input type="password" name="_password">
        <br/>
        {#<input type="checkbox" id="remember_me" name="_remember_me"/>#}
        {#<label for="remember_me">Запомнить меня</label>#}
        {#<br/>#}
    <button type="submit" class="button">Войти</button>
    </form>

</div>
</div>

{% endblock %}